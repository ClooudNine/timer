<Window x:Class="Timer.AddCompetitorModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="AddCompetitorModal" Height="256" Width="800">
    <Grid Margin="0,0,0,8">
        <Label Content="Введите обозначение участника:" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="39" Width="192"/>
        <TextBox x:Name="CaptionCompetitorTextBox" HorizontalAlignment="Center" Margin="0,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Height="36"/>
        <Button x:Name="AddCompetitor" Content="Добавить участника" HorizontalAlignment="Center" Margin="0,146,0,0" VerticalAlignment="Top" Height="40" Width="192" Click="AddCompetitor_Click"/>

    </Grid>
</Window>
