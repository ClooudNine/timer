<Window x:Class="Timer.CustomizationTimer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Timer"
        mc:Ignorable="d"
        Title="Таймер" Height="450" Width="800" WindowState="Maximized" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="CaptionTimer" Content="Таймер" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddPeople" Content="Добавить участника" HorizontalAlignment="Center" Margin="0,41,0,0" VerticalAlignment="Top" Height="39" Width="169" Click="AddPeople_Click"/>
        <ScrollViewer Margin="0,85,0,0">
            <WrapPanel x:Name="Competitors" Margin="0,85,0,0" ItemWidth="300" HorizontalAlignment="Left"/>
        </ScrollViewer>
    </Grid>
</Window>
